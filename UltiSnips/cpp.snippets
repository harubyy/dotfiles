# equality operators
snippet opequ "operator==/!=" [b]
bool operator==(${1} const& lhs, $1 const& rhs)
{
	return std::tie(${2}) == std::tie(${2/lhs/rhs/g});
}

bool operator!=($1 const& lhs, $1 const& rhs)
{
	return !(lhs == rhs);
}
endsnippet

